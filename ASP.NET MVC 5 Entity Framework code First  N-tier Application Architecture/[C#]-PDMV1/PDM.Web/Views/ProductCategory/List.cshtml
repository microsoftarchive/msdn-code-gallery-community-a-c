@model IEnumerable<PDM.Model.ProductCategory>

@if (Model.Count() == 0)
{
    <tr><td>No records found</td></tr>
}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.Name)</td>
            <td>
                <a>
                    <span class="glyphicon glyphicon-th-list" id="details-category" data-id="@item.ProductCategoryID"></span>
                </a>
            </td>
            <td>
                <a>
                    <span class="glyphicon glyphicon-edit" id="edit-category" data-id="@item.ProductCategoryID"></span>
                </a>
            </td>
            <td>
                <a>
                    <span class="glyphicon glyphicon-remove" id="delete-category" data-id="@item.ProductCategoryID"></span>
                </a>
            </td>
        </tr>
    }
}
