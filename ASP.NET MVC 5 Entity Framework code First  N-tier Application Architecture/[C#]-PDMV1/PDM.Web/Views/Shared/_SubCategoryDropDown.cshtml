@model IEnumerable<PDM.Model.ProductSubCategory>

@if (Model.Count() != 0)
{
    List<SelectListItem> items = new List<SelectListItem>();

    foreach (var item in Model)
    {
        items.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ProductSubCategoryID.ToString()
        });
    }


    @Html.DropDownList("ProductSubCategoryID", (IEnumerable<SelectListItem>)items, "--select--", new { @class = "selectpicker form-control" })
    @Html.ValidationMessage("ProductSubCategoryID")
}
else
{
    @Html.DropDownList("ProductSubCategoryID", Enumerable.Empty<SelectListItem>(), "--select--", new { @class = "selectpicker form-control" })
    @Html.ValidationMessage("ProductSubCategoryID")
}

