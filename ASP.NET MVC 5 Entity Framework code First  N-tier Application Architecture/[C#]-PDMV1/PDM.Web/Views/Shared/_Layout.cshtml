<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Product Data Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .intro-block {
            margin-top: 60px;
        }

        .textalign-center {
            text-align: center;
        }

        .glyphicon-search {
            font-size: 2.4em;
        }

        .top-buffer {
            margin-top: 20px;
        }

        .glyphicon-plus {
            font-size: 30px;
        }

        .glyphicon-refresh {
            font-size: 30px;
        }

        .jumbotron {
            background-color: #337ab7;
            height: 130px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PMS", "Index", "Product", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Product", "Index", "Product")</li>
                    <li>@Html.ActionLink("Product Category", "Index", "ProductCategory")</li>
                    <li>@Html.ActionLink("Product Sub Category", "Index", "ProductSubCategory")</li>
                    <li>@Html.ActionLink("Product Model", "Index", "ProductModel")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>

    <div class="intro-block">
        <div class="container">
            <div class="container-fluid">
                <div class="jumbotron">
                    <div class="col-sm-8">
                        <input type="text" class="form-control input-lg" id="productAutoComplete" placeholder="Search Product By Name">
                    </div>
                    <div class="col-sm-2" style="margin-top:6px">
                        @*<a href="#"><span class="glyphicon glyphicon-search"></span></a>*@
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>

    <footer style="text-align:center">
        <p>&copy; @DateTime.Now.Year - Product Managenment System</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
