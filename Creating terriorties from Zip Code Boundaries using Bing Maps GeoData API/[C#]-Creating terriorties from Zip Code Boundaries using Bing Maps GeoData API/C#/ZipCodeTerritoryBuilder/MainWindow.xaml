<Window x:Class="ZipCodeTerritoryBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZipCodeTerritoryBuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Button Content="Create Territory" Click="CreateTerritoryClicked"/>
    
        <TextBox Name="Output" Grid.Row="1" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>    
        
        <Button Content="Copy to Clipboard" Grid.Row="2" Click="CopyToClipboardClicked"/>
    </Grid>
</Window>
