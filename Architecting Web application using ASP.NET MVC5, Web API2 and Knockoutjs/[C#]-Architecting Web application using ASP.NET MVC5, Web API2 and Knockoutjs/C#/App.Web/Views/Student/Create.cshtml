@model App.Web.ViewModels.StudentViewModel

@{
    ViewBag.Title = "Student Maintenance";
}


    
<form class="form-horizontal">
 
    
    <div class="row">
        <div class="span10">
            <div class="page-header">
                <h2>Student Information <small><i class="icon-double-angle-right"></i>  manage student records</small></h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="span5">

            <div class="control-group">
                <span class="control-label" for="FirstName">First Name <span class="required"></span></span>
                <div class="controls">
                    <input id="FirstName" type="text" data-bind="value: FirstName" />
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="LastName">Last Name <span class="required"></span></label>
                <div class="controls">
                    <input id="LastName" type="text" data-bind="value: LastName" />
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="FirstName">Date of Birth <span class="required"></span></label>
                <div class="controls">
                    <input id="DateOfBirth" type="text" data-bind="value:DateOfBirth" />
                </div>
            </div>
      
            <div class="control-group">
                <label class="control-label" for="FirstName">Gender <span class="required"></span></label>
                <div class="controls">
                    <label style="text-align: left">
                        <input  type="radio" value="Male" name='SelectedGender' data-bind="checked: SelectedGender" />
                        <span>Male</span>
                    </label>
                    <label style="text-align: left">
                        <input  type="radio" value="Female" name='SelectedGender' data-bind="checked: SelectedGender" />
                        <span>Female</span>
                    </label>
                </div>
            </div>

        </div>
        <div class="span5">
            <div class="control-group">
                <label class="control-label" for="FirstName">Country <span class="required"></span></label>
                <div class="controls">
                    <select id="CountryId" data-bind="options: CountryLookup, value: SelectedCountry, optionsText: 'CountryName' ,optionsValue:'CountryId' "></select>
                </div>
            </div>
            <div class="control-group">


                <label class="control-label" for="FirstName"> Payment Method <span class="required"></span></label>
                <div class="controls">
                    <ul id="SelectedPaymentMethods" data-bind="foreach: PaymentMethods">
                        <li>
                            <label style="text-align: left">
                                <input type="checkbox" data-bind="attr: { value: name }, checked: $root.SelectedPaymentMethods">
                                <span data-bind="text: name"></span>
                            </label>


                        </li>
                    </ul>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="FirstName">Remarks <span class="required"></span></label>
                <div class="controls">
                    <textarea data-bind="value: Remarks"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="span10">
            <div class="form-actions">
                <input id="btnCreate" type="button" value="Save" data-bind="click: CreateStudent" class="btn btn-primary btn-medium" />
            </div>
        </div>
    </div>
</form>




<script type="text/javascript">
    var studentD = "@Model.StudentID";

    $("#DateOfBirth").datepicker({
        showOn: "button",
        buttonImage: '/img/icon-calendar.gif',
        buttonImageOnly: true,
        changeMonth: true,
        changeYear: true
    });

</script>
<script src="@Url.Content("~/Scripts/Student/Student.js")" type="text/javascript"></script>
